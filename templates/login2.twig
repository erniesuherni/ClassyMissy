<a href="login.php" data-toggle="modal" data-target="#bannerformmodal">Login</a>

<main class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-md-4 offset-md-4">
                <form id="register-form" action="login.php" method="post">
                    <h4>Login to your account</h4>
                    <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="you@example.com" class="form-control">
                    </div>
                    <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="minimum 8 characters" class="form-control">
                    </div>
                    <button class="btn btn-primary" type="submit">Login</button>
                    {% if login.success %}
                    <div class="alert alert-success">
                        Login successful!
                    </div>
                    {% elseif login.errors.account or login.errors.system %}
                    <div class="alert alert-warning">
                        {{login.errors.account}}
                    </div>
                    {% endif %}
                </form>
                </div>
      </div>
    </div>  
</main>