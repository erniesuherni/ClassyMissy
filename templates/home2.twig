<!doctype html>
<html lang="en">
    {% include 'partials/head.twig' %}
    <body >
    {% include 'partials/navigation.twig' %}
        <main class="container-fluid" style="padding-top:30px;">
                    <div class="carousel slide" id="product-carousel" data-ride="carousel">
                        <div class="carousel-inner">
                        {% for image in images %}
                        {% set active = loop.index == 0 ? 'active' : '' %}
                            <div class="carousel-item {{active}}">
                                <img class="w-100" src="images/promotion/{{image}}">
                            </div>
                        {% endfor %}
                        </div>
                        <ol class="carousel-indicators">
                            {% for image in images %}
                            <li data-target="#product-carousel" data-slide-to="{{loop.index0}}">
                                <img src="images/promotion/{{image}}" class="img-fluid">
                            </li>
                            {% endfor %}
                        </ol>
                        <a class="carousel-control-prev" href="#product-carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#product-carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
        </main>
         <script>
        // script for add and minus button in detail page
        $(document).ready(
            () => {
                let qty = $('#quantity').val();
                let max = $('#quantity').attr('max');
               
                $('#plus').click( () => {
                    qty++;
                    if( qty <= max ){
                         $('#quantity').val(qty);
                    }
                });
                $('#minus').click( () => {
                    if( qty > 1 ){
                        qty--;
                        $('#quantity').val(qty);
                    }
                });
            }
        );
        </script>
    </body>
</html>